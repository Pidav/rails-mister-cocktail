<div class="container">
  <div class="row mt-4">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-12 col-md-6 col-xl-4">
        <%= link_to cocktail_path(cocktail) do %>
          <% if cocktail.photo.attached? %>
            <div class="card-category m-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
              <%= cocktail.name %>
            </div>
          <% else %>
            <div class="card-category m-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path('base_image.jpg')%>'); background-size: cover; background-position: center">
              <%= cocktail.name %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <div class="col-sm-12 col-md-6 col-xl-4">
      <%= link_to new_cocktail_path do %>
        <div class="card-category m-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(#)">
          Add a cocktail
        </div>
      <% end %>
    </div>
  </div>
</div>
